package mall.service.impl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import mall.common.pojo.EasyUIDataGridResult;
import mall.mapper.TbContentMapper;
import mall.pojo.TbContent;
import mall.pojo.TbContentExample;
import mall.pojo.TbContentExample.Criteria;
import mall.service.ItemContentService;
/**
 * 商品添加列表管理
 * <p>Title: ItemContentServiceImpl</p>
 * <p>Description: </p>
 * <p>Company: www.itcast.cn</p> 
 * @version 1.0
 */
public class ItemContentServiceImpl implements ItemContentService {
	@Autowired
	private TbContentMapper tbContentMapper;
	public List<EasyUIDataGridResult> getItemContentlist(long categoryId) {
		//根据parentid查询子节点列表
		TbContentExample  example = new TbContentExample();
		Criteria criteria = example.createCriteria();
		//设置查询条件
		criteria.andCategoryIdEqualTo(categoryId);
		List<TbContent> list = tbContentMapper.selectByExample(example);
		//把列表转换为EasyUIDataGridResult列表
		List<EasyUIDataGridResult> result = new ArrayList<>();
		for (TbContent tbContent : list) {
			EasyUIDataGridResult node = new EasyUIDataGridResult();
			node.
		}
		return null;
	}

}
